---
import Layout from '../layouts/Layout.astro';

const contacts = [
	{
		title: 'GitHub',
		detail: 'github.com/C4bbage64',
		link: 'https://github.com/C4bbage64',
	},
	{
		title: 'Email',
		detail: 'you@example.com',
		link: 'mailto:you@example.com',
	},
	{
		title: 'LinkedIn',
		detail: 'linkedin.com/in/your-handle',
		link: '#',
	},
];
---

<Layout title="Contact | C4bbage64" description="Get in touch for collaboration or questions">
	<section class="mx-auto max-w-4xl px-6 py-14 lg:py-20">
		<div class="space-y-3">
			<p class="text-sm uppercase tracking-[0.2em] text-slate-500 dark:text-slate-400">Contact</p>
			<h1 class="text-3xl font-semibold leading-tight sm:text-4xl">Let's talk</h1>
			<p class="max-w-2xl text-slate-600 dark:text-slate-300">
				Pick the channel that works best for you. The email address and links below are placeholdersâ€”swap
				in the real ones before launch.
			</p>
		</div>

		<div class="mt-10 grid gap-4 sm:grid-cols-2">
			{contacts.map((contact) => (
				<a class="card block p-5 transition hover:-translate-y-1 hover:shadow-xl" href={contact.link} target={contact.link?.startsWith('http') ? '_blank' : undefined} rel={contact.link?.startsWith('http') ? 'noreferrer' : undefined}>
					<p class="text-sm uppercase tracking-[0.15em] text-slate-500 dark:text-slate-400">{contact.title}</p>
					<p class="mt-2 text-lg font-semibold">{contact.detail}</p>
					<p class="mt-2 text-sm text-slate-600 dark:text-slate-300">Add a short note about what you prefer to discuss or when you're available.</p>
				</a>
			))}
		</div>
	</section>
</Layout>
